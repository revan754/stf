<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp">

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_28sdp"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sayin"
                        android:textColor="@color/beyaz2"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:text="Salim"
                        android:textColor="@color/beyaz2"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear"
                    android:layout_marginLeft="@dimen/_42sdp"
                    android:background="@drawable/edittext"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_42sdp"
                    android:orientation="horizontal"
                    android:weightSum="8">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_weight="0.5"
                        android:background="@drawable/adsoyad" />

                    <EditText
                        android:id="@+id/deviceName"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_below="@id/linear3"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_weight="7.5"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:hint="@string/cihazAdi"
                        android:inputType="number"
                        android:textColor="@color/backgroundBlue"
                        android:textColorHint="@color/backgroundBlue"

                        android:textCursorDrawable="@color/gri"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear1"
                    android:layout_marginLeft="@dimen/_42sdp"
                    android:background="@drawable/edittext"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_42sdp"
                    android:orientation="horizontal"
                    android:weightSum="8">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_weight="0.5"
                        android:background="@drawable/sehir" />

                    <EditText
                        android:id="@+id/deviceIdd"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_below="@id/linear3"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_weight="7.5"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:hint="@string/cihazId"
                        android:inputType="number"
                        android:textColor="@color/backgroundBlue"
                        android:textColorHint="@color/backgroundBlue"

                        android:textCursorDrawable="@color/gri"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <Button
                    android:id="@+id/addDevice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_below="@id/liner"
                    android:layout_marginLeft="@dimen/_42sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:layout_marginRight="@dimen/_160sdp"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/cihazEkle"
                    android:textAllCaps="false"
                    android:textColor="@color/beyaz2">

                </Button>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/addDevice"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:background="@color/butonColor" />

                <RelativeLayout
                    android:id="@+id/relative_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view3"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@color/backgroundBlue"

                    >


                            <TextView
                                android:id="@+id/text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:text="@string/eklenenCihazListesi"
                                android:textColor="@color/beyaz2"
                                android:textSize="@dimen/_16sdp"/>


                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/text3"
                        android:layout_marginLeft="@dimen/_128sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/butonColor" />

                    <TextView
                        android:id="@+id/cihazAdiText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_below="@id/view4"
                        android:text="Tk342355"
                        android:textColor="@color/beyaz2"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_16sdp"/>
                    <TextView
                        android:id="@+id/tarlaMevkiiText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_below="@id/cihazAdiText"
                        android:text="Tk342355"
                        android:textColor="@color/beyaz2"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textSize="@dimen/_16sdp"/>

                </RelativeLayout>


                <Button
                    android:id="@+id/complateSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_below="@id/relative_layout"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_60sdp"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    android:text="@string/kayidiTamamla"
                    android:textAllCaps="false"
                    android:textColor="@color/beyaz2"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/stf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
